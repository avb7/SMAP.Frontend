<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SMAP.Views.LoginPage">
    <ContentPage.Content>
        <!-- Main Grid -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>

            <!-- Background Image -->
            <Image 
                Grid.RowSpan="2"
                Grid.Row="0"
                Aspect="AspectFill"
                Source="LoginPageBackground.png"
                />

            <!-- HeaderIcon -->
            <StackLayout 
                Grid.Row="0"
                Padding="60">
                <Image 
                    Aspect="AspectFit"
                    Source="SmapLoginIcon.png"
                    
                />
            </StackLayout>


            <!-- Facebook button -->
            <StackLayout
                Grid.Row="1">

                <Image 
                    Source="LoginWithFacebookButton.png"
                    Aspect="AspectFit">

                 <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OnLogin}"/>
                 </Image.GestureRecognizers>
                </Image>
                
            </StackLayout>
            

            
        </Grid>
    </ContentPage.Content>
</ContentPage>
